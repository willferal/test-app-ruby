<% content_for :breadcrumb do %>
  <h1 class="text-2xl font-semibold"><%= Entidade.model_name.human %></h1>
<% end %>
<div class="py-5">
  <p>
    <strong><%= Entidade.human_attribute_name :tipo_entidade %>:</strong>
    <%= @entidade.tipo_entidade.descricao %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :origem %>:</strong>
    <%= @entidade.origem.descricao %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :nome %>:</strong>
    <%= @entidade.nome %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :cpf_cnpj %>:</strong>
    <%= @entidade.cpf_cnpj %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :razao_social %>:</strong>
    <%= @entidade.razao_social %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :endereco %>:</strong>
    <%= @entidade.endereco %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :numero_endereco %>:</strong>
    <%= @entidade.numero_endereco %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :complemento_endereco %>:</strong>
    <%= @entidade.complemento_endereco %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :bairro_endereco %>:</strong>
    <%= @entidade.bairro_endereco %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :municipio %>:</strong>
    <%= @entidade.municipio&.descricao %>
  </p>
  <p>
    <strong><%= Entidade.human_attribute_name :atuacao_ids %>:</strong>
    <%= @entidade.atuacoes&.map(&:descricao).join(', ') %>
  </p>
</div>

<%= link_to(t('helpers.links.back'), entidades_path, class: 'px-4 py-2 text-sm text-white rounded-md bg-primary hover:bg-primary-dark focus:outline-none focus:ring focus:ring-primary focus:ring-offset-1 focus:ring-offset-white dark:focus:ring-offset-dark') %>
<%= link_to t('helpers.links.edit'), edit_entidade_path(@entidade), class: 'px-4 py-2 text-sm text-white rounded-md bg-primary hover:bg-primary-dark focus:outline-none focus:ring focus:ring-primary focus:ring-offset-1 focus:ring-offset-white dark:focus:ring-offset-dark' %>